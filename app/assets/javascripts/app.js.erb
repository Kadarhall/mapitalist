// sidebar toggling

$("#sidebar-left>.close").on("click", function(){
	invertSelected();
	$(".tab").removeClass("selected")
	$("#sidebar-left").animate({"margin-left": '-=500'})
});

$(".tab").on("click", function(){
	var icon = $(".fa", this);
	if ($(this).hasClass("selected")){
		// slide off screen
		icon.css({'color': icon.css('background-color'), 'background-color': icon.css('color')});
		$(".selected").removeClass("selected");
		$("#sidebar-left").animate({"margin-left": '-=500'})
	} else {
		
		invertSelected();

		icon.css({'color': icon.css('background-color'), 'background-color': icon.css('color')});

		// slide on screen or change tabs
		$(".selected").removeClass("selected");
		$(this).addClass("selected");
		$("#sidebar-left").animate({"margin-left": '0'})
	}
});

function invertSelected(){
	$(".selected .fa").each(function(){

		var color = $(this).css('color');
		var bgColor = $(this).css('background-color');

		$(this).css({'color': bgColor, 'background-color': color })
	});
}

